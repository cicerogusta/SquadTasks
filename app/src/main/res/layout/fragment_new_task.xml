<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.fragment.NewTaskFragment"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Task"
            android:textAlignment="center"
            android:textSize="32sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Task"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:hint="Title text here..."
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Task"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/editDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Description text here..."
            android:layout_marginTop="16dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who Send Task"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is priority Task?"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            />

        <CheckBox
            android:id="@+id/checkBoxYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <CheckBox
            android:id="@+id/checkBoxNoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No" />

        <Button
            android:id="@+id/buttonSendTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:text="Send" />


    </LinearLayout>
</layout>